<%- include('../layout/header') %> 
<div class="container mt-3">
    <div class="row">
        <div class="col-12">
            <h1 class="display-6">New Category</h1>
            <form action="/dashboard/categories/add" method="POST" class="row">
                <div class="col-12 col-lg-8">
                    <div class="form-control p-4">
                        <label for="name" class="form-label"><strong>Category Name</strong></label>
                        <input type="text" class="form-control" name="name" id="name" placeholder="Add category name...">
                        <span class="error"></span>
                        <br/><br/>
                        <label for="desc" class="form-label"><strong>Description</strong></label>
                        <textarea class="form-control" name="desc" id="desc" placeholder="Add Content..."></textarea>
                        <hr/>
                        <button type="submit" class="btn btn-primary btn-lg w-100">Add Category</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../layout/footer') %> 
